<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_title_gray_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_holiday_record_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5.0dip"
            android:text="钱思明申请病假"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_16" />
    </LinearLayout>

    <View style="@style/detail_cut_line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/detail_node_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_node_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/holiday_record_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="30.0dip"
                android:text="申请人"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txt_holiday_record_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="100.0dip"
                android:text="赵思明"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <View style="@style/detail_cut_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_node_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/holiday_record_holidaytype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="30.0dip"
                android:text="请假类型"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txt_holiday_record_holidaytype"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="100.0dip"
                android:text="病假"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>

        <View style="@style/detail_cut_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_node_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/holiday_record_begindate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="30.0dip"
                android:text="开始时间"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txt_holiday_record_begindate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="90.0dip"
                android:text="病假"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
          <View style="@style/detail_cut_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_node_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/holiday_record_enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="30.0dip"
                android:text="结束时间"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txt_holiday_record_enddate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="90.0dip"
                android:text="病假"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
        <View style="@style/detail_cut_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_node_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/holiday_record_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="30.0dip"
                android:text="请假天数"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txt_holiday_record_days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="90.0dip"
                android:text="病假"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
        
          <View style="@style/detail_cut_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_node_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/holiday_record_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="30.0dip"
                android:text="请假理由"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txt_holiday_record_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="90.0dip"
                android:text="病假"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
        <View style="@style/detail_cut_line" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/detail_node_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/holiday_record_audit_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="30.0dip"
                android:text="审批状态"
                android:textSize="@dimen/text_size_16" />

            <TextView
                android:id="@+id/txt_holiday_record_audit_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="90.0dip"
                android:text="病假"
                android:textSize="@dimen/text_size_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>