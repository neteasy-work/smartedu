<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/profile_avatar_width"
                android:layout_height="@dimen/profile_avatar_height"
                android:padding="1px"
                android:background="@drawable/bg_border1"
                android:id="@+id/avatar"/>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_vertical">

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:id="@+id/username"/>

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:visibility="gone"
                    android:id="@+id/isVerified"/>

                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="sex"
                        android:id="@+id/sex"/>

                </LinearLayout>

                <TextView
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text=""
                    android:id="@+id/relationship"/>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="5dp"
                android:text="@string/unfollow_he"
                android:id="@+id/unfollow"
                android:visibility="gone"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/verified_layout">

            <TextView
                android:layout_marginTop="5.0dip"
                android:text="认证ID"
                style="?android:attr/listSeparatorTextViewStyle"/>

            <TextView
                android:linksClickable="true"
                android:id="@+id/verified_info"
                android:paddingLeft="20.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="20.0dip"
                android:paddingBottom="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/intro_layout">

            <TextView
                android:layout_marginTop="5.0dip"
                android:text="@string/intro"
                style="?android:attr/listSeparatorTextViewStyle"/>

            <TextView
                android:linksClickable="true"
                android:id="@+id/textView_info"
                android:paddingLeft="20.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="20.0dip"
                android:paddingBottom="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textIsSelectable="true"/>
        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/location_layout">

            <TextView
                android:layout_marginTop="5.0dip"
                android:text="@string/address"
                style="?android:attr/listSeparatorTextViewStyle"/>

            <TextView
                android:linksClickable="true"
                android:id="@+id/location"
                android:paddingLeft="20.0dip"
                android:paddingTop="5.0dip"
                android:paddingRight="20.0dip"
                android:paddingBottom="5.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>


     



    </LinearLayout>
</ScrollView>
